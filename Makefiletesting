SRCS			=	pipex.c pipex_utils.c ft_split.c ft_substr.c check_cmd.c

OBJS			=	$(SRCS:.c=.o)

SRCS_BONUS		=	pipex_bonus/here_doc.c \
					pipex_bonus/pipex.c \
					pipex_bonus/pipex_utils.c \

OBJS_BONUS		=	$(SRCS_BONUS:.c=.o)

CC				=	gcc
RM				=	rm -f
CFLAGS			=

NAME			=	pipex
NAME_BONUS		=	pipex_bonus

LIBRARIES		=	-L pipex_bonus/libft/libft.a
INCLUDES		=	-Ilibftprintfgnl

all:			$(NAME)

$(NAME):		$(OBJS)
				@echo "\nLa compilation est en cours...\n"
				@$(CC) $(CFLAGS) -s $(OBJS) -o $(NAME) $(LIBRARIES)
				@echo "La compilation est terminée !\n"

%.o: %.c
				@$(CC) $(CFLAGS) $(INCLUDES) -g3 -I/usr/include -O3 -c $< -o $@ -s

bonus:			$(NAME_BONUS)

$(NAME_BONUS):	$(OBJS_BONUS)
				@echo "\nLa compilation est en cours...\n"
				@make -s -C libft/
				@make -s -C get_next_line/
				@$(CC) $(CFLAGS) -s $(OBJS_BONUS) -o $(NAME_BONUS) $(LIBRARIES)
				@echo "La compilation est terminée !\n"

clean:
				@make -s -C libftprintfgnl clean
				@$(RM) $(OBJS) $(OBJS_BONUS)
				@echo "\nLe programme est clean\n"

fclean:			clean
				@make -s -C libftprintfgnl fclean
				@$(RM) $(NAME) $(NAME_BONUS)
				@echo "\net fclean\n"

re:				fclean $(NAME)

.PHONY:			all clean fclean re bonus
